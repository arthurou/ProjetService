{% block body %}

    <div class="loginForm">

        {% block fos_user_content %}
            {% trans_default_domain 'FOSUserBundle' %}
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <input type="text" class="form-control" placeholder="{{ 'security.login.username'|trans }}" name="_username"><br>
                <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" name="_password"><br>

                <div>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>

                <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

            </form>

        {% endblock fos_user_content %}

    </div>
{% endblock %}