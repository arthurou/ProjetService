
<div class="loginForm" >

        {% trans_default_domain 'FOSUserBundle' %}

        {% block fos_user_content %}

            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

                {{ form_errors(form) }}

                <p>
                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': "Pseudo:"} } ) }}
                    {{ form_errors(form.username) }}
                </p>
                <p>
                    {{ form_widget(form.email ,  {'attr': {'class': 'form-control', 'placeholder': "email:"} } ) }}
                    {{ form_errors(form.email) }}
                </p>
                <p>
                    {{ form_widget(form.plainPassword.first,  {'attr': {'class': 'form-control', 'placeholder': "Mot de passe:"} } ) }}
                    {{ form_errors(form.plainPassword.first) }}
                </p>
                <p>
                    {{ form_widget(form.plainPassword.second,  {'attr': {'class': 'form-control', 'placeholder': "Confirmer le mot de passe:"} } ) }}
                    {{ form_widget(form.plainPassword.second) }}
                </p>

                {{ form_rest(form) }}
                <div>
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="{{ 'registration.submit'|trans }}" />
                </div>

            </form>

        {% endblock fos_user_content %}

</div>