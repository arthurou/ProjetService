{% extends "::templateModal.html.twig" %}

{% block modalContent %}

    {% trans_default_domain 'FOSUserBundle' %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel"></h4>

        <ul class="nav nav-tabs" id="TabModal">
            <li><a href="#connexionTab" data-toggle="tab">{{ 'security.login.submit'|trans }}</a></li>
            <li><a href="#registerTab" data-toggle="tab">{{ 'registration.submit'|trans }}</a></li>
        </ul>
    </div>

    <div class="modal-body">
        <div id="TabModalContent" class="tab-content">
            <div class="tab-pane active fade in" id="connexionTab">
                {% render path("fos_user_security_login") %}
            </div>

            <div class="tab-pane fade" id="registerTab">
                {% render path("fos_user_registration_register") %}
            </div>
        </div>
    </div>

{% endblock %}